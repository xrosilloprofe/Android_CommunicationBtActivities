<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/condicionesTexto"
        android:layout_width="292dp"
        android:layout_height="111dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:tag="¿Aceptas las condiciones?"
        android:text="¿Aceptas las condiciones?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132" />

    <Button
        android:id="@+id/aceptar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="aceptar"
        app:layout_constraintEnd_toStartOf="@+id/rechazar"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="@+id/condicionesTexto"
        app:layout_constraintTop_toBottomOf="@+id/condicionesTexto" />

    <Button
        android:id="@+id/rechazar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="rechazar"
        app:layout_constraintEnd_toEndOf="@+id/condicionesTexto"
        app:layout_constraintStart_toEndOf="@+id/aceptar"
        app:layout_constraintTop_toBottomOf="@+id/condicionesTexto" />
</androidx.constraintlayout.widget.ConstraintLayout>